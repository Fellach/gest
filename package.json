{
  "name": "global-event-state",
  "version": "1.1.1",
  "author": "Marcin Feleniak",
  "type": "module",
  "main": "dist/index.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js"
    }
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/react": "^18.3.0",
    "release-please": "17.1.2",
    "typescript": "5.9.2"
  },
  "description": "Lightweight global state manager using CustomEvent",
  "keywords": [
    "global state",
    "event bus",
    "custom event",
    "state management",
    "pubsub"
