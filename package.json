  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "prepublishOnly": "npm run build"
  },
  "types": "dist/index.d.ts"
}
